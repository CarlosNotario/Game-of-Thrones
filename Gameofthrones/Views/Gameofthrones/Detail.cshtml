@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.SeriesTitle</title>
</head>
<body>
    <div>
        <h1>@ViewBag.SeriesTitle</h1>
        <h2>Episode #@ViewBag.EpisodeNumber</h2>

        <h5>Description:</h5>
        <div>@Html.Raw(ViewBag.Description)</div>

        @if (ViewBag.Credits.Length > 0)
        {
            <h5>Credits:</h5>
            <div>
                <ul>
                    @foreach (var credit in ViewBag.Credits)
                    {
                        <li>@credit</li>
                    }
                </ul>
            </div>
        }
    </div>
</body>
</html>
